#include<stdio.h>
#include<stdlib.h>

int main () {
	
	float nota1 ;
	
	float nota2  ;

	float nota3 ;
	
	float nota4  ;
	
	
	printf("escreva a primeira nota: ");
	scanf("%f", &nota1);
	
	printf("escreva a segunda nota: ");
	scanf("%f", &nota2);
	
	printf("escreva a terceira nota: ");
	scanf("%f", &nota3);
	
	printf("escreva a quarta nota: ");
	scanf("%f", &nota4);
	
	float total = nota1 + nota2 + nota3 + nota4 ;
	
	printf("a nota total e %f:", total);
	
	float media = (nota1 + nota2 + nota3 + nota4) / 4;
	printf("\n a media dos alunos e %f ", media);
	
	return 0;
	
}
