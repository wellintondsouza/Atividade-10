#include <stdio.h>
#include <stdlib.h>

int main () {
	
	float raio;
	
	
		
	printf("digite o raio do circulo ");
	scanf("%f", &raio);
	
	float area = 3.14 * (raio * raio) ;
	
	
	float comprimento = 2 * 3.14 * raio;
	 
	
	printf("\na area do circulo e %f ", area);
	printf("\no comprimento do circulo e %f", comprimento);

	return 0;
	
}
